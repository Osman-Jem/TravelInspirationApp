@model TravelInspiration.Models.WeatherData

<h1>Vädret i @Model?.Name</h1>

@if (ViewBag.Error != null)
{
    <p style="color:red;">@ViewBag.Error</p>
}
else if (Model != null)
{
    <p>Temperatur: @Model.Main.Temp °C</p>
    <p>Luftfuktighet: @Model.Main.Humidity %</p>
}
else
{
    <p>Ingen väderdata att visa.</p>
}

<form method="get" asp-action="Index">
    <input type="text" name="stad" placeholder="Ange stad" />
    <button type="submit">Sök</button>
</form>
